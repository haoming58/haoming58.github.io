{% if page.img %}
<style>
  .hero-section {
    background: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.4)), url('{{ page.img | relative_url }}');
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
    background-repeat: no-repeat;
    color: white;
    padding: 120px 0;
    margin-bottom: 0;
    min-height: 60vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
  }
  
  .hero-content h1 {
    color: white;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.8);
    font-size: 3.5rem;
    font-weight: 300;
    margin-bottom: 1rem;
  }
  
  .hero-content p {
    color: white;
    text-shadow: 1px 1px 2px rgba(0,0,0,0.8);
    font-size: 1.3rem;
    font-weight: 300;
    margin-bottom: 0;
  }
  
  .cards-section {
    background: #f8f9fa;
    padding: 60px 0;
    margin-top: 0;
  }
  
  .card {
    background: white;
    border-radius: 15px;
    padding: 30px;
    margin-bottom: 30px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: none;
  }
  
  .card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.15);
  }
  
  .card h3 {
    color: #2c3e50;
    font-size: 1.5rem;
    margin-bottom: 20px;
    font-weight: 600;
  }
  
  .card p {
    color: #6c757d;
    line-height: 1.6;
    margin-bottom: 0;
  }
  
  .profile-section {
    background: white;
    padding: 40px 0;
  }
  
  @media (max-width: 768px) {
    .hero-section {
      padding: 80px 0;
      min-height: 50vh;
      background-attachment: scroll;
    }
    
    .hero-content h1 {
      font-size: 2.5rem;
    }
    
    .hero-content p {
      font-size: 1.1rem;
    }
    
    .cards-section {
      padding: 40px 0;
    }
    
    .card {
      padding: 20px;
      margin-bottom: 20px;
    }
  }
</style>

